extends ../layouts/default

block main
  h1 Organizações mapeadas

block content
  p
    a(href="/organizations/new") Criar nova organização
  - if (organizations.length)
    table.table
      thead
        tr
          th Organização
          th Atividade Exercidas
          th Financiamento Recebido
      tbody
        - each organization in organizations
          tr
            td
              a(href='/organizations/'+organization._id, title=organization.name) #{organization.name}
            td
              ul
                each activity in organization.activities
                  li=activity
            td=Globalize.format(organization.totalFinanced,'c')

    - if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)
  - else
    p Não há organizações mapeadas.
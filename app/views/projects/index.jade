extends ../layouts/default

block main
  h1 Projetos mapeados

block content
  a(href="/projects/new") Adicionar um projeto
  - if (projects.length)
    table.table
      thead
        tr
          th Projeto
          th Financiamentos Mapeados
      tbody
      - each project in projects
        tr
          td
            a(href='/projects/'+project._id, title=project.title) #{project.title}
          td=Globalize.format(project.financingTotal,'c')
    - if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)
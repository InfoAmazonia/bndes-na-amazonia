extends ../layouts/default

block main
  h1 Projetos

block content
  - if (projects.length)
    table.table
      thead
        tr
          th Nome
          th Financiamentos Mapeados
      tbody
      - each project in projects
        tr
          td
            a(href='/projects/'+project._id, title=project.title) #{project.title}
          td
            =accounting.formatMoney(project.financingTotal, "R$", 2, ".", ",")

    - if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)